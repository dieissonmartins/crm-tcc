
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Usuários 
      <small>Todos os usuários</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/users"><i class="fa fa-dashboard"></i> Usuários</a>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
              <div class="box-header">
                <a href="/users/create" class="btn btn-primary"><i class="fa fa-users" aria-hidden="true"></i> | NOVO USUÁRIOS</a>
              </div>
              <div class="box-body">
                <table id="tabela-servicos" class="table table-striped table-bordered dataTable no-footer">
                    <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nome</th>
                          <th>E-mail</th>
                          <th>Senha</th>
                          <th></th>
                        </tr>
                    </thead>
                    <tbody>
                      <% usuarios.forEach(usuario => { %>
                          <tr>
                            <td><%= usuario.id %></td>
                            <td id="nome"><%= usuario.name %></td>
                            <td id="nome"><%= usuario.email %></td>
                            <td id="nome"><%= "*****" %></td>
                            <td style="float: right;">
                              <a href="/usuarios/<%= usuario.id %>/" class="btn btn-default"><i class="fa fa-street-view" aria-hidden="true"></i></a>
                              <a href="/usuarios/<%= usuario.id %>/edit" class="btn btn-default"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                              <form action="/usuarios/destroy" method="POST" style="display: inline;" onsubmit="deletarConfirmacao(event, this);">
                                  <input type="hidden" name="id" value="<%= usuario.id %>">
                                  <button type="submit" class="btn btn-default"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                              </form>
                            </td>
                          </tr>  
                      <% }); %>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("Você quer deletar este Serviço?");
      if(deletar){
          form.submit();
      }
  }
</script>

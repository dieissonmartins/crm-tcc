
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Serviço
      <small>serviço</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/servicos"><i class="fa fa-dashboard"></i> Serviços</a>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
              <div class="box-header">
                <a href="/servicos" class="btn btn-danger"><i class="fa fa-reply" aria-hidden="true"></i> VOLTAR</a>
              </div>
              <div class="box-body">
                <table id="tabela-servicos" class="table table-striped table-bordered dataTable no-footer">
                    <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nome</th>
                          <th>Descrição</th>
                          <th>Valor</th>
                          <th>Data</th>
                          <th>Acões</th>
                        </tr>
                    </thead>
                    <tbody>
                          <tr>
                            <td><%= servico.id %></td>
                            <td id="nome"><%= servico.nome %></td>
                            <td><%= servico.descricao %></td>
                            <td><%= servico.valor %></td>
                            <td>
                              <%= ((servico.createdAt.getDate() > 9) ? servico.createdAt.getDate() : ('0' + servico.createdAt.getDate()))+
                                '/' +((servico.createdAt.getMonth() > 8) ? (servico.createdAt.getMonth() + 1) : ('0' + (servico.createdAt.getMonth() + 1)))+
                                '/' + servico.createdAt.getFullYear() %>
                            </td>
                            <td style="float: right;">
                              <a href="/servicos/<%= servico.id %>/" class="btn btn-default"><i class="fa fa-street-view" aria-hidden="true"></i></a>
                              <a href="/servicos/<%= servico.id %>/edit" class="btn btn-default"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                              <form action="/servicos/destroy" method="POST" style="display: inline;" onsubmit="deletarConfirmacao(event, this);">
                                  <input type="hidden" name="id" value="<%= servico.id %>">
                                  <button type="submit" class="btn btn-default"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                              </form>
                            </td>
                          </tr>  
                    </tbody>
                </table>
              </div>
          </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("Você quer deletar este Serviço?");
      if(deletar){
          form.submit();
      }
  }
</script>
<%- include('../../layout/footer.ejs'); %> 

  
 
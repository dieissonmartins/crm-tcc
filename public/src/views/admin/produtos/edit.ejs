
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Produtos
      <small>Editar Produto</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/produto"><i class="fa fa-dashboard"></i> Produtos</a>
      </li>
      <li>
        <a href="/produtos/create"> Novo</a>
      </li>
    </ol>
    
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <a href="/produtos" class="btn btn-danger"><i class="fa fa-reply" aria-hidden="true"></i> VOLTAR</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/produtos/update" method="POST" class="form-horizontal">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nome" class="col-sm-2 control-label">Nome</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="nome" class="form-control" value="<%- produto.nome %>">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="descricao" class="col-sm-2 control-label">Descrição</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="descricao" class="form-control" value="<%- produto.descricao %>">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="valor" class="col-sm-2 control-label">Valor</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="valor" class="form-control" value="<%- produto.valor %>">
                        </div>
                      </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <input type="hidden" name="id" class="form-control" value="<%- produto.id %>">
                    <button type="submit" class="btn btn-info pull-right">EDITAR</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
              </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("Você quer deletar este Produto?");
      if(deletar){
          form.submit();
      }
  }
</script>
<%- include('../../layout/footer.ejs'); %> 

  
 
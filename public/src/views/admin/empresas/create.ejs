
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Empresas
      <small>Cadastro de Empresas</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/empresas"><i class="fa fa-dashboard"></i> Empresas</a>
      </li>
      <li>
        <a href="/empresas/create"> Novo</a>
      </li>
    </ol>
    
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <a href="/clientes/<%= clienteId %>/" class="btn btn-danger"><i class="fa fa-reply" aria-hidden="true"></i> VOLTAR</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/empresas" method="POST" class="form-horizontal">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nome" class="col-sm-2 control-label">Nome</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="nome" class="form-control" placeholder="Digite o nome da empresa">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="cnpj" class="col-sm-2 control-label">Cnpj</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="cnpj" class="form-control" placeholder="Digite o cnpj da empresa">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="atividade" class="col-sm-2 control-label">Atividade</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="atividade" class="form-control" placeholder="Digite atividade da empresa">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="razaoSocial" class="col-sm-2 control-label">Razão Social</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="razaoSocial" class="form-control" placeholder="Digite a razão social da empresa">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="telefone" class="col-sm-2 control-label">Telefone</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="telefone" class="form-control" placeholder="Digite o telefone da passoa">
                      </div>
                    </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <input type="hidden" name="clienteId" class="form-control" value="<%= clienteId %>">
                    <button type="submit" class="btn btn-info pull-right">CADASTRAR</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
              </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("Você quer deletar este Cliente?");
      if(deletar){
          form.submit();
      }
  }
</script>

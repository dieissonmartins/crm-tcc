
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Contratos
      <small>Cadastro de Contratos</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/contratos"><i class="fa fa-dashboard"></i> Contratos</a>
      </li>
      <li>
        <a href="/contratos/create"> Novo</a>
      </li>
    </ol>
    
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <a href="/pessoas/<%= pessoaId %>/<%= clienteId %>/" class="btn btn-danger"><i class="fa fa-reply" aria-hidden="true"></i> VOLTAR</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/contratos" method="POST" class="form-horizontal">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="dataVenda" class="col-sm-2 control-label">Data de Venda</label>
    
                      <div class="col-sm-8">
                        <input type="date" name="dataVenda" class="form-control">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="dataVencimento" class="col-sm-2 control-label">Data de Vencimento</label>
      
                        <div class="col-sm-8">
                          <input type="date" name="dataVencimento" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="valor" class="col-sm-2 control-label">Valor</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="valor" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="produto" class="col-sm-2 control-label">Produto</label>
      
                        <div class="col-sm-8">
                            <select class="form-control" name="produtoId">
                                <option value="">Selecione</option>
                                <% produtos.forEach(produto => { %>
                                    <option value="<%= produto.id %>"><%= produto.nome %></option>
                                <% }); %>
                              </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="produto" class="col-sm-2 control-label">Serviço</label>
      
                        <div class="col-sm-8">
                            <select class="form-control" name="servicoId">
                                <option value="">Selecione</option>
                                <% servicos.forEach(servico => { %>
                                    <option value="<%= servico.id %>"><%= servico.nome %></option>
                                <% }); %>
                              </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="produto" class="col-sm-2 control-label">Anexo</label>
      
                        <div class="col-sm-8">
                            <input type="file" name="anexoFile" class="form-control">
                        </div>
                    </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <input type="hidden" name="clienteId" class="form-control" value="<%= clienteId %>">
                    <input type="hidden" name="pessoaId" class="form-control" value="<%= pessoaId %>">
                    <button type="submit" class="btn btn-info pull-right">CADASTRAR</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
              </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("Você quer deletar este Cliente?");
      if(deletar){
          form.submit();
      }
  }
</script>
<%- include('../../layout/footer.ejs'); %> 

  
 
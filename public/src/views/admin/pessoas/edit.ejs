
<%- include('../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Pessoas
      <small>Cadastro de Pessoas</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/pessoas"><i class="fa fa-dashboard"></i> Pessoas</a>
      </li>
      <li>
        <a href="/pessoas/create"> Novo</a>
      </li>
    </ol>
    
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <a href="/clientes/<%= clienteId %>/" class="btn btn-danger"><i class="fa fa-reply" aria-hidden="true"></i> VOLTAR</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/pessoas/update" method="POST" class="form-horizontal">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="nome" class="col-sm-2 control-label">Nome</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="nome" class="form-control" value="<%- pessoa.nome %>">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="cpf" class="col-sm-2 control-label">Cpf</label>
      
                        <div class="col-sm-8">
                          <input type="text" name="cpf" class="form-control" value="<%- pessoa.cpf %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="dataNacimento" class="col-sm-2 control-label">Data de nascimento</label>
      
                        <div class="col-sm-8">
                          <input type="date" name="dataNascimento" class="form-control" value="<%- pessoa.dataNascimento %>">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="telefone" class="col-sm-2 control-label">Telefone</label>
    
                      <div class="col-sm-8">
                        <input type="text" name="telefone" class="form-control" value="<%- pessoa.telefone%>">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="telefone" class="col-sm-2 control-label">Telefone</label>
      
                        <div class="col-sm-8">
                            <select class="form-control" id="sexo" name="sexo">
                                <option value="">Selecione</option>
                                <option value="Feminino" <% if(pessoa.sexo === "Feminino"){ %><%-'selected'%><%}%>>Feminino</option>
                                <option value="Masculino" <% if(pessoa.sexo === "Masculino"){ %><%-'selected'%><%}%>>Masculino</option>
                            </select>
                        </div>
                      </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <input type="hidden" name="id" class="form-control" value="<%- pessoa.id %>">
                    <input type="hidden" name="clienteId" class="form-control" value="<%= clienteId %>">
                    <button type="submit" class="btn btn-info pull-right">EDITAR</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
              </div>
        </div>
    </div>
</section>


<script>
  function deletarConfirmacao(event, form)
  {
      event.preventDefault();
      var deletar = confirm("VocÃª quer deletar este Cliente?");
      if(deletar){
          form.submit();
      }
  }
</script>
